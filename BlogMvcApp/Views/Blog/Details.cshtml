@model BlogMvcApp.Entity.Blog

@{
    ViewBag.Title = "Details";
}


<h2 style="margin-top: 2rem; margin-bottom: 2rem;">@Model.Heading</h2>

<div class="row mr-1">

    <img class="img-fluid" src="https://mdbootstrap.com/img/new/slides/041.jpg" />
</div>
<div class="row">

    <p class="mt-4">Eklenme Tarihi: @Model.AddedTime</p>
    <blockquote>
        <p>@Model.Content</p>
    </blockquote>
</div>

@section RightColumn
    {

    @Html.Partial("_Search")

    <br />

    @{Html.RenderAction("CategoryList", "Category");}


}
