@model IEnumerable<BlogMvcApp.Models.BlogModel>




@if (Model.Count() == 0)
{
    <div class="alert alert-warning">
        <h2>Herhangi bir blog bulunamadı</h2>
    </div>
}
else
{
    foreach (var blog in Model)
    {

        <div class="card mb-3 shadow">
            <img src="https://mdbootstrap.com/img/new/slides/041.jpg"
                 class="card-img-top"
                 alt="@blog.Heading" />
            <div class="card-body">
                <h4 class="card-title"><strong>@blog.Heading</strong></h4>
                <p class="card-text">
                    @blog.Description
                </p>
                <p class="card-text">
                    <small class="text-muted">@blog.AddedTime</small>
                </p>
            </div>

            <div>
                <a href="/blog/details/@blog.Id" class="btn btn-dark float-right mb-2 mr-3">Detay</a>
            </div>
        </div>



    }

}
