<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Yönetici Sayfası</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/Content/fontawesomeall.css" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark navbar-content">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="/Admin">Yönetici</a>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item ">
                    <a class="nav-link" href="/Home/Index">Anasayfa<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Blog/Index">Bloglarım</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Category/Index">Kategorilerim</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admin">Roller</a>
                </li>
            </ul>
        </div>
    </nav>
    <br />
    <div class="container body-content">

        @if (IsSectionDefined("RightColumn"))
        {
            <div class="row">
                <div class="col-md-8">

                    @RenderBody()
                </div>

                <div class="col-md-4">

                    @RenderSection("RightColumn")
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-12">
                    @RenderBody()
                </div>
            </div>
        }

        <hr />

    </div>

    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>