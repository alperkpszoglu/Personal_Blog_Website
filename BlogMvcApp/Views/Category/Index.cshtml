@model IEnumerable<BlogMvcApp.Models.CategoryModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kategori Listesi</h2>
<hr />
@if (TempData["UpdatedCategory"] != null)
{
    var UpdatedCategory = (BlogMvcApp.Models.CategoryModel)TempData["UpdatedCategory"];

    <div class="alert alert-success" role="alert">
        <p><i class="fa fa-check"></i><strong> @UpdatedCategory.CategoryName</strong> Adlı Kategori Güncellendi</p>
    </div>
}

<p>
    @Html.ActionLink("Kategori Ekle", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogCount)
        </th>
        <th style="width:12.5rem"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(i => item.CategoryName)
            </td>
            <td>@item.BlogCount</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }

</table>
